<% action= (band.persisted? ? band_url(band) : bands_url) %>
<% method= (band.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="POST">
<input type="hidden" value="<%= method %>" name="_method">
<%= auth_token%>

<label for="band_name">Enter a band name</label>
<input type="text" id='band_name' name="band[name]" value="<%= band.name %>">
<br>

<% submit_text = (band.persisted? ? "Edit" : "Create!")%>
<input type="submit" value="<%= submit_text %>">

</form>

