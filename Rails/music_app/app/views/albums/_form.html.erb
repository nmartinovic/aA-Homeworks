<% action= (album.persisted? ? album_url(album.id) : albums_url) %>
<% method= (album.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="POST">
<input type="hidden" value="<%= method %>" name="_method">

<%= auth_token %>
<label for="album_name">Album Name</label>
<input type="text" id="album_name" name="album[name]" value="<%= album.name %>">

<label for="album_band">Band</label>
<select name="album[band_id]" id="album_band">
<% Band.all.each do |band| %>
<option value="<%= band.id %>" <%= band.id == @band.id ? "selected" : "" %> ><%= band.name %></option>
<% end %>
</select>


<label for="album_year">Album Year</label>
<input type="text" id="album_year" name="album[year]" value="<%= album.year %>">

<br>
<p>Studio album?</p>
<input type="radio" id="studio_true" name="album[studio?]" value="true" <%= album.studio? ? "checked" : "" %>>
<label for="studio_true">True</label><br>

<input type="radio" id="studio_false" name="album[studio?]" value="false" <%= !album.studio? ? "checked" : "" %>>
<label for="studio_false">False</label><br>
<br>
<input type="submit" value="Submit">

</form>